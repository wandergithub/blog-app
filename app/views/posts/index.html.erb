<div>
  <div class="user_container">
    <img src=<%= @user.photo%> alt="User">
    <div><h1><%= @user.name %></h1> <small>Number of posts: <%= @user.posts_counter %></small></div>
  </div>
  <div>
    <% @posts.each do |post| %>
      <div>
        <h2><%= post.title %></h2>
        <p><%= post.text %></p>
        <span>Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %></span>
      </div>
      <ul>
        <% post.most_recent_comments.each do |comment| %>
          <li><%= comment.author.name %>:<%= comment.text%></li>
        <% end %>
      </ul>
    <%end%>
  </div>
  <button type="button">Pagination</button>
</div>